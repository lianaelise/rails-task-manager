<h2>Edit Task</h2>
<h2><--- * ---></h2>

<%= form_for @task, url: update_path(@task), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

    <div class="form-group">
    <%= f.label :complete %>
    <%= f.check_box :complete, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
<%= link_to "Back to Task List", tasks_path, class: "btn btn-primary"%>
